<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mealplans"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:src="@drawable/menu"></ImageView>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drwr"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/meals"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Your Meal Plans"
        android:textColor="@color/black"
        android:textSize="20dp"
        ></TextView>

    <LinearLayout
        android:id="@+id/firstlinear"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/meals"
        android:orientation="horizontal"
        android:weightSum="1"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/meal1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:layout_weight=".5"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            android:clickable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Meal Plan"
                android:textSize="30dp"
                ></TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_weight=".5"
            android:layout_height="200dp"
            android:layout_width="200dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:elevation="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Meal Plan"
                android:textSize="30dp"
                ></TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/firstlinear"
        android:orientation="horizontal"
        android:weightSum="1"
        >
        <androidx.cardview.widget.CardView
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:layout_weight=".5"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:elevation="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Meal Plan"
                android:textSize="30dp"
                ></TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_weight=".5"
            android:layout_height="200dp"
            android:layout_width="200dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:elevation="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Meal Plan"
                android:textSize="30dp"
                ></TextView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left"
            android:background="#9C3865">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/circle"
                    android:layout_marginTop="20dp"
                    >


                </ImageView>
                ></LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Awais Sabir"
                android:textColor="@color/black"
                android:layout_marginLeft="130dp"
                android:textSize="20dp">


            </TextView>

            <TextView
                android:id="@+id/editprof"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Edit profile"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:clickable="true">


            </TextView>

            <TextView
                android:id="@+id/editpass"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Change Password"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:clickable="true">


            </TextView>

            <TextView
                android:id="@+id/mealplanbt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Meal Planner"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:clickable="true"
                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Shopping List"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                ></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                >


                <TextView
                    android:id="@+id/exittext"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="Logout"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="200dp"
                    android:textSize="20dp"
                    android:clickable="true">


                </TextView>

                <ImageView
                    android:id="@+id/exit"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:src="@drawable/exit"
                    android:layout_marginTop="200dp"
                    android:clickable="true"
                    >

                </ImageView>




            </LinearLayout>


        </LinearLayout>

    </androidx.drawerlayout.widget.DrawerLayout>


</RelativeLayout>

