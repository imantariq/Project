<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile">
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/arrow"
                android:scaleType="fitEnd">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Profile"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="35dp">
            </TextView>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginStart="-400dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/user"></ImageView>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginStart="-395dp"
        android:layout_marginTop="180dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white"
            android:text="Full Name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginStart="-400dp"
        android:layout_marginTop="230dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white"
            android:text="Email"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_marginStart="-400dp"
        android:layout_marginTop="280dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#9C3865"
                android:layout_marginStart="110dp"></TextView>
            <EditText
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/white"
                android:text="Value"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginStart="80dp"
                android:textSize="20dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMR"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#9C3865"
                android:layout_marginStart="110dp"></TextView>
            <EditText
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/white"
                android:text="Value"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginStart="80dp"
                android:textSize="20dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginStart="-400dp"
        android:layout_marginTop="350dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:elevation="10dp">
            <EditText
                android:layout_width="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_height="70dp"
                android:background="@drawable/cal"
                android:text="Daily Calores Count"
                android:gravity="center"
                android:textColor="@color/white">
            </EditText>
            <EditText
                android:layout_width="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="160dp"
                android:layout_height="70dp"
                android:text="Daily Calorie Goal:1200"
                android:gravity="center"
                android:textColor="@color/black">
            </EditText>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginStart="-400dp"
        android:layout_marginTop="470dp">
        <Button
            android:id="@+id/ep"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#8C3030"
            android:text="Edit Preference"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginStart="-400dp"
        android:layout_marginTop="530dp">
        <Button
            android:id="@+id/ca"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#8C3030"
            android:text="Change Account Details"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>