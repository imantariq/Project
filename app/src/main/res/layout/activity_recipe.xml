<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".recipe">
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="200dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:elevation="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/food8"
            android:clickable="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:maxWidth="400dp"
            android:maxHeight="240dp"
            android:scaleType="fitXY" ></ImageView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="440dp"
        android:layout_marginStart="-390dp"
        android:layout_marginTop="210dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="30dp"
            android:layout_margin="5dp"
            android:elevation="30dp">
                <TextView
                    android:id="@+id/ing"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients"
                    android:layout_marginStart="15dp"
                    android:textColor="#655B5B"
                    android:textStyle="bold"
                    android:textSize="18dp"></TextView>
                <TextView
                    android:id="@+id/dir"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="160dp"
                    android:text="Directions"
                    android:textColor="#655B5B"
                    android:textStyle="bold"
                    android:textSize="18dp"></TextView>
                <TextView
                    android:id="@+id/nut"
                    android:clickable="true"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="280dp"
                    android:text="Nutritions"
                    android:textColor="#655B5B"
                    android:textStyle="bold"
                    android:textSize="18dp"></TextView>
             <TextView
                 android:layout_width="400dp"
                 android:layout_height="30dp"
                 android:layout_marginTop="50dp"
                 android:layout_marginStart="10dp"
                 android:textColor="@color/black"
                 android:textSize="15dp"
                 android:text="    Ingredient: Chicken                 quantity:1/2 Kg"></TextView>
            <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:checked="true"
                android:layout_marginStart="320dp">
            </CheckBox>
            <TextView
                android:layout_width="400dp"
                android:layout_height="30dp"
                android:layout_marginTop="90dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="    ingredient: Olive oil                 quantity:2 tbsp"></TextView>
            <CheckBox
                android:layout_width="wrap_content"
                android:checked="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginStart="320dp">
            </CheckBox>
            <TextView
                android:layout_width="400dp"
                android:layout_height="30dp"
                android:layout_marginTop="130dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="    Ingredient:Salt                         quantity:1 tps"></TextView>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:layout_marginStart="320dp">
            </CheckBox>
            <TextView
                android:layout_width="400dp"
                android:layout_height="30dp"
                android:layout_marginTop="170dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="    Ingredient:Yogurt                   quantity:1/2 cup"></TextView>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_marginTop="160dp"
                android:layout_marginStart="320dp">
            </CheckBox>
            <TextView
                android:layout_width="400dp"
                android:layout_height="30dp"
                android:layout_marginTop="210dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="    Ingredient:Red chilli               quantity:1 tps"></TextView>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_marginStart="320dp">
            </CheckBox>
            <TextView
                android:layout_width="400dp"
                android:layout_height="30dp"
                android:layout_marginTop="250dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="   Ingredient:Black Pepper         quantity: 1 tps"></TextView>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="240dp"
                android:layout_marginStart="320dp">
            </CheckBox>
            <TextView
                android:layout_width="400dp"
                android:layout_height="30dp"
                android:layout_marginTop="290dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="   Ingredient:Butter                     quantity: 1 tbsp"></TextView>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_marginTop="280dp"
                android:layout_marginStart="320dp">
            </CheckBox>
            <TextView
                android:layout_width="400dp"
                android:layout_height="30dp"
                android:layout_marginTop="330dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="   Ingredient:Mix Herb               quantity: 1 tbps"></TextView>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="320dp"
                android:layout_marginStart="320dp">
            </CheckBox>
            <Button
                android:id="@+id/as"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginTop="360dp"
                android:layout_marginStart="220dp"
                android:layout_weight="1"
                android:background="#8C3030"
                android:text="Add to shopping list "
                android:textColor="@color/white" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>