<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".recipedirection">
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="200dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:elevation="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/food8"
                android:clickable="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:maxWidth="400dp"
                android:maxHeight="240dp"
                android:scaleType="fitXY" ></ImageView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="440dp"
        android:layout_marginStart="-390dp"
        android:layout_marginTop="210dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="30dp"
            android:layout_margin="5dp"
            android:elevation="30dp">
            <TextView
                android:id="@+id/ing"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients"
                android:layout_marginStart="15dp"
                android:textColor="#655B5B"
                android:textStyle="bold"
                android:textSize="18dp"></TextView>
            <TextView
                android:id="@+id/dir"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:text="Directions"
                android:textColor="#655B5B"
                android:textStyle="bold"
                android:textSize="18dp"></TextView>
            <TextView
                android:id="@+id/nut"
                android:clickable="true"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="280dp"
                android:text="Nutritions"
                android:textColor="#655B5B"
                android:textStyle="bold"
                android:textSize="18dp"></TextView>
            <TextView
                android:layout_width="400dp"
                android:layout_height="80dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="Step 1:Combine yogurt, Red Chilli, Salt, black pepper, mix herb, and Butter in a large bowl. Stir in chicken, cover, and refrigerate for 1 hour."></TextView>
            <TextView
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_marginTop="140dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="Step 2:  Lightly oil the grill grate. Thread chicken onto skewers, and discard marinade. Grill until juices run clear, about 5 minutes on each side.

"></TextView>
            <TextView
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_marginTop="220dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="Step 3: Melt butter in a large heavy skillet over medium heat.Add grilled chicken, and simmer for 10 minutes. Transfer to a serving platter, and garnish with fresh cilantro.">
        </TextView>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>